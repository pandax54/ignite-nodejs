{
  "compilerOptions": {
    "target": "es2019",                                
    "module": "commonjs",                                                 
    "outDir": "./dist",                             
    "rootDir": ".",                                        
    "baseUrl": "./src",                             
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@erros/*": ["erros/*"]
    },                                
    "esModuleInterop": true,                  
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,              
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,        
    "resolveJsonModule": true
  }
}
